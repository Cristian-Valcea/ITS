{
  "dashboard": {
    "id": null,
    "title": "Stress Testing Platform - Real-Time Monitoring",
    "tags": ["stress-testing", "risk-governor", "trading"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Decision Latency P99 (Critical < 15ms)",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(risk_governor_decision_latency_seconds_bucket[1m])) * 1000",
            "legendFormat": "P99 Latency (ms)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 15}
              ]
            },
            "unit": "ms"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Pipeline Latency P99 (Critical < 20ms)",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(pipeline_latency_seconds_bucket[1m])) * 1000",
            "legendFormat": "Pipeline P99 (ms)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 15},
                {"color": "red", "value": 20}
              ]
            },
            "unit": "ms"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Hard Limit Breaches (Must be 0)",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(risk_governor_hard_limit_breaches_total[1h])",
            "legendFormat": "Breaches/Hour"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "red", "value": 0.1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Position Delta ($)",
        "type": "stat",
        "targets": [
          {
            "expr": "abs(risk_governor_position_delta_usd)",
            "legendFormat": "Position Delta"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 500},
                {"color": "red", "value": 1000}
              ]
            },
            "unit": "currencyUSD"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Decision Latency Over Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(risk_governor_decision_latency_seconds_bucket[1m])) * 1000",
            "legendFormat": "P99"
          },
          {
            "expr": "histogram_quantile(0.95, rate(risk_governor_decision_latency_seconds_bucket[1m])) * 1000",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.50, rate(risk_governor_decision_latency_seconds_bucket[1m])) * 1000",
            "legendFormat": "P50"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "ms"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "Decision Rate (per second)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(risk_governor_decisions_total[1m])",
            "legendFormat": "Decisions/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "reqps"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 7,
        "title": "Error Rate (%)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(risk_governor_decision_errors_total[5m]) / rate(risk_governor_decisions_total[5m]) * 100",
            "legendFormat": "Error Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.05},
                {"color": "red", "value": 0.1}
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 16}
      },
      {
        "id": 8,
        "title": "Recovery Time (seconds)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "risk_governor_recovery_time_seconds",
            "legendFormat": "Recovery Time"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 20},
                {"color": "red", "value": 30}
              ]
            },
            "unit": "s"
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 16}
      },
      {
        "id": 9,
        "title": "Memory Usage (MB)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "process_resident_memory_bytes / 1024 / 1024",
            "legendFormat": "Memory Usage"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "decbytes"
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 16}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s",
    "schemaVersion": 30,
    "version": 1
  }
}